{% extends 'base.html.twig' %}

{% block body %}

    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('administration') }}">Retour à l'administration général</a>

                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 style="font-weight: bold; font-size: 20px" class="panel-title">Liste de tous les utilisateurs</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <!--<button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>-->
                                {% if is_granted('ROLE_ADMIN') %}        
                                    
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Rôle, Niveau de sécurité</th>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}  
                                    <th><em class="fa fa-cog"></em></th>
                                    {% endif %}
                                </tr> 
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.username|e }}</td>
                                        <td>{{ user.email}}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.roles|join(', ') }}</td>
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}   
                                        <td align="center">
                                            <a class="btn btn-default" href="{{ path('demote_user', { 'id': user.id }) }}"><em class="fa fa-arrow-circle-down"> Retrograder</em></a>
                                            <a class="btn btn-primary" href="{{ path('promote_user', { 'id': user.id }) }}"><em class="fa fa-arrow-circle-up"> Promouvoir</em></a>
                                            <a class="btn btn-danger" href="{{ path('delete_user', { 'id': user.id }) }}"><em class="fa fa-trash"> Supprimer</em></a>
                                        </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                {#{% for user in users %}
                                    {{ user.username|e }}
                                {% endfor %}#}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <!-- <div class="col col-xs-4">Page 1 of 5
                             </div>
                             <div class="col col-xs-8">
                                 <ul class="pagination hidden-xs pull-right">
                                     <li><a href="#">1</a></li>
                                     <li><a href="#">2</a></li>
                                     <li><a href="#">3</a></li>
                                     <li><a href="#">4</a></li>
                                     <li><a href="#">5</a></li>
                                 </ul>
                                 <ul class="pagination visible-xs pull-right">
                                     <li><a href="#">«</a></li>
                                     <li><a href="#">»</a></li>
                                 </ul>
                             </div>-->
                        </div>
                    </div>

                </div>

                

            </div>
        </div>
    </div>

{% endblock %}


