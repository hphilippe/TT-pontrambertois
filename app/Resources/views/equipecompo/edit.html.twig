            {{ form_end(delete_form) }}
        </div>
    
    liste des années :
    {% for anneCompet in anneCompets %}
     <div class="table-responsive">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ anneCompet.id }}</td>
            </tr>
            <tr>
                <th>Anneedepart</th>
                <td>{{ anneCompet.anneeDepart }}</td>
            </tr>
            <tr>
                <th>Phase</th>
                <td>{{ anneCompet.phase }}</td>
            </tr>
            <tr>
                <th>Nombre d'équipe</th>
                <th>{{ anneCompet.numberEquipe }}</th>
            </tr>
        </tbody>
    </table>
    </div>
