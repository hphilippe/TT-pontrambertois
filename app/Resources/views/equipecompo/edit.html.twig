{% extends 'base.html.twig' %}

{% block body %}
    <h1>Éditer la composition d'équipe</h1>
    
    {{ form_start(edit_form) }}
        {#{{ form_label(edit_form.nomEquipe) }}#} Nom de l'équipe (ex: 1 PR Poule A):
        {{ form_widget(edit_form.nomEquipe) }}
        {{ form_errors(edit_form.nomEquipe) }}
        
        {#{{ form_label(edit_form.anne) }}#} Équipe rattaché à l'année d'ID 
