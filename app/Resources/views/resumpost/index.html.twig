
{% extends 'base.html.twig' %}

{% block body %}

    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('adminResumMatch') }}">Retour à l'administration du tableau</a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('annecompet_index') }}">créer une nouvelle Année</a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('equipecompo_index') }}">créer une nouvelle Équipe pour une année</a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('matchcompet_index') }}">Accès à l'administration des scores</a>

                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 style="font-weight: bold; font-size: 20px" class="panel-title">Liste de tous les résumé de match</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <!--<button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>-->
                                {% if is_granted('ROLE_ADMIN') %}        
                                    <a class="btn btn-sm btn-primary btn-create" href="{{ path('resumpost_new') }}">créer un nouveau résumé</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    
                                    <th>Date</th>
                                    <th>Author</th>
                                    <th><em class="fa fa-cog"></em></th>
                                </tr> 
                            </thead>
                            <tbody>
                                {% for resumPost in resumPosts %}
                                    <tr>
                                        <td><a href="{{ path('resumpost_show', { 'id': resumPost.id }) }}">{{ resumPost.id }}</a></td>
                                        <td>{{ resumPost.title }}</td>
                                        
                                        <td>{% if resumPost.date %}{{ resumPost.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ resumPost.author }}</td>
                                        <td align="center">
                                            <a class="btn btn-default" href="{{ path('resumpost_show', { 'id': resumPost.id }) }}"><em class="fa fa-eye"></em></a>
                                                {% if is_granted('ROLE_ADMIN') %}   
                                                <a class="btn btn-primary" href="{{ path('resumpost_edit', { 'id': resumPost.id }) }}"><em class="fa fa-pencil"></em></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <!-- <div class="col col-xs-4">Page 1 of 5
                             </div>
                             <div class="col col-xs-8">
                                 <ul class="pagination hidden-xs pull-right">
                                     <li><a href="#">1</a></li>
                                     <li><a href="#">2</a></li>
                                     <li><a href="#">3</a></li>
                                     <li><a href="#">4</a></li>
                                     <li><a href="#">5</a></li>
                                 </ul>
                                 <ul class="pagination visible-xs pull-right">
                                     <li><a href="#">«</a></li>
                                     <li><a href="#">»</a></li>
                                 </ul>
                             </div>-->
                        </div>
                    </div>

                </div>



            </div>
        </div>
    </div>

{% endblock %}


