{% extends 'base.html.twig' %}

{% block body %}

    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('adminResumMatch') }}">Retour à l'administration du tableau </a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('equipecompo_index') }}">créer une nouvelle Équipe pour une année</a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('resumpost_index') }}">Accès aux résumés des matchs</a>
                <a style="margin-bottom: 15px;margin-left: 10px;" class=" btn btn-primary" href="{{ path('matchcompet_index') }}">Accès à l'administration des scores</a>
                
                <p>visibilite : 1 = tableau des scores et match afficher sur l'écran d'accueil, 0 = tableau non afficher sur l'écran d'acceuil</p>
                
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 style="font-weight: bold; font-size: 20px" class="panel-title">Liste de toutes les années</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <!--<button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>-->
                                {% if is_granted('ROLE_ADMIN') %}        
                                    <a class="btn btn-sm btn-primary btn-create" href="{{ path('annecompet_new') }}">créer une nouvel année</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th class="hidden-xs">Année</th>
                                    <th>Phase</th>
                                    <th>Nombre équipe</th>
                                    <th>Visibilité</th>
                                    <th><em class="fa fa-cog"></em></th>
                                </tr> 
                            </thead>
                            <tbody>
                                {% for anneCompet in anneCompets %}
                                    <tr>
                                        <td><a href="{{ path('annecompet_show', { 'id': anneCompet.id }) }}">{{ anneCompet.id }}</a></td>
                                        <td>{{ anneCompet.anneeDepart }}</td>
                                        <td>{{ anneCompet.phase }}</td>
                                        <td>{{ anneCompet.numberEquipe }}</td>
                                        <td>{{ anneCompet.visibilite }}</td>
                                        <td align="center">
                                            <a class="btn btn-default" href="{{ path('annecompet_show', { 'id': anneCompet.id }) }}"><em class="fa fa-eye"></em></a>
                                                {% if is_granted('ROLE_ADMIN') %}   
                                                <a class="btn btn-primary" href="{{ path('annecompet_edit', { 'id': anneCompet.id }) }}"><em class="fa fa-pencil"></em></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <!-- <div class="col col-xs-4">Page 1 of 5
                             </div>
                             <div class="col col-xs-8">
                                 <ul class="pagination hidden-xs pull-right">
                                     <li><a href="#">1</a></li>
                                     <li><a href="#">2</a></li>
                                     <li><a href="#">3</a></li>
                                     <li><a href="#">4</a></li>
                                     <li><a href="#">5</a></li>
                                 </ul>
                                 <ul class="pagination visible-xs pull-right">
                                     <li><a href="#">«</a></li>
                                     <li><a href="#">»</a></li>
                                 </ul>
                             </div>-->
                        </div>
                    </div>

                </div>



            </div>
        </div>
    </div>

{% endblock %}


