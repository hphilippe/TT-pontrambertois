{% extends 'base.html.twig' %}

{% block body %}
    <h1>matchCompet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matchCompet.id }}</td>
            </tr>
            <tr>
                <th>Numeroequie</th>
                <td>{{ matchCompet.numeroEquie }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ matchCompet.score }}</td>
            </tr>
            <tr>
                <th>Journee</th>
                <td>{{ matchCompet.journee }}</td>
            </tr>
        </tbody>
    </table>

    <div style="margin: 10px 20px;">
         {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('matchcompet_index') }}">Back to the list</a>
         {% endif %}
            <a class="btn btn-primary" href="{{ path('matchcompet_edit', { 'id': matchCompet.id }) }}">Éditer le contenu</a>
            <a class="btn btn-primary" href="{{ path('adminResumMatch') }}">Retour à l'administration du tableau</a>
          {% if is_granted('ROLE_SUPER_ADMIN') %}
            {{ form_start(delete_form, {'attr': {'class': 'form_display'}}) }}
                <input class="btn btn-secondary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
          {% endif %}
    </div>
{% endblock %}
