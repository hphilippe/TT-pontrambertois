{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}   
        <h1>creation d'un article</h1>

        {{ form_start(form) }}
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}

        <div style="display: block">
            {{ form_label(form.content) }}
            {{ form_errors(form.content) }}
        </div>
        {{ form_widget(form.content) }}

        <div style="display: block">
            {{ form_label(form.author) }}
            {{ form_errors(form.author) }}
            {{ form_widget(form.author, {'value' : app.user.username}) }}
        </div>

        <div style="display: block">
            {{ form_label(form.categorie) }}
            {{ form_errors(form.categorie) }}
            {{ form_widget(form.categorie) }}
        </div>
        
        <div style="margin: 10px 20px;">
        <input class="btn btn-secondary" type="submit" value="Créer le contenue" />

        {{ form_end(form) }}

    {% endif %}

        <a class="btn btn-primary" style="color: white;text-decoration: none;" href="{{ path('blogpost_index') }}">retour à la liste de tous les articles</a>
        </div>

    <script>
        var CKEDITOR_BASEPATH = '/ttpontrambertois/web/bundles/ttplatform/ckeditor/';
    </script>
{% endblock %}
