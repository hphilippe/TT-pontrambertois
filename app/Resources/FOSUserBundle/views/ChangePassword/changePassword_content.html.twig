{% trans_default_domain 'FOSUserBundle' %}

<br>
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'col-md-12 go-right special_form'  } }) }}

<div class="form-group">
    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.current_password) }}
    {{ form_errors(form.current_password) }}
</div>
<div class="form-group">
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.plainPassword.first) }}
    {{ form_errors(form.plainPassword.first) }}
</div>
<div class="form-group">
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.plainPassword.second) }}
    {{ form_errors(form.plainPassword.second) }}
</div>

<div class="form-group">
    <div class="col-xs-6 col-md-6">
        <a class="btn btn-primary btn-block btn-lg" href="{{ path('fos_user_profile_show') }}">Retour sur le profil</a>
    </div>
    <div class="col-xs-6 col-md-6">
        <button class="btn btn-success btn-block btn-lg" type="submit" />{{ 'change_password.submit'|trans }}</button>
    </div>
</div>
    {{ form_end(form) }}