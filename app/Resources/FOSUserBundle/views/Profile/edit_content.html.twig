{% trans_default_domain 'FOSUserBundle' %}

<br>

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'col-md-12 go-right special_form' } }) }}
<div class="form-group">
    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.username) }}
    {{ form_errors(form.username) }}
</div>
<div class="form-group">
    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.nom) }}
    {{ form_errors(form.nom) }}
</div>
<div class="form-group">
    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.prenom) }}
    {{ form_errors(form.prenom) }}
</div>
<div class="form-group">
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.email) }}
    {{ form_errors(form.email) }}
</div>
<div class="form-group">
    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
    {{ form_label(form.current_password) }}
    {{ form_errors(form.current_password) }}
</div>

<div class="form-group">
    <div class="col-xs-6 col-md-6">
        <a class="btn btn-primary btn-block btn-lg" href="{{ path('fos_user_profile_show') }}">Retour sur le profil</a>
    </div>
    <div class="col-xs-6 col-md-6">
        <button class="btn btn-success btn-block btn-lg" type="submit" />{{ 'profile.edit.submit'|trans }}</button>
    </div>
</div>

{{ form_end(form) }}